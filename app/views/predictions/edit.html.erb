<div class="row">

  <div class="large-12 columns intro concert-page">

    <h1><%= @concert.venue %></h1>
    <h2><%= @concert.concert_date %></h2>
    <h3><%=@concert.city %> , <%= @concert.state %></h3>

    <h1>Make your picks</h1>

    <% if @prediction.errors.any? %>
      <h2>ERROR!</h2>
      <ul>
        <% @prediction.errors.full_messages.each do |error_msg| %>
        <li><%= error_msg %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for ([@concert, @prediction]) do |f| %>

    <%= f.label :set_one_opener_song_id, "Set One Opener", class: "prediction-form" %>
    <%= f.select :set_one_opener_song_id,
    @song_list.map { |s| [s.song_name, s.id] },
    { include_blank: true },
    { class: 'chosen-select' }
    %>

    <%= f.label :set_one_closer_song_id, "Set One Closer", class: "prediction-form" %>
    <%= f.select :set_one_closer_song_id,
    @song_list.map { |s| [s.song_name, s.id] },
    { include_blank: true },
    { class: 'chosen-select' }
    %>

    <%= f.label :set_two_opener_song_id, "Set Two Opener", class: "prediction-form" %>
    <%= f.select :set_two_opener_song_id,
    @song_list.map { |s| [s.song_name, s.id] },
    { include_blank: true },
    { class: 'chosen-select' }
    %>

    <%= f.label :set_two_closer_song_id, "Set Two Closer", class: "prediction-form"%>
    <%= f.select :set_two_closer_song_id,
    @song_list.map { |s| [s.song_name, s.id] },
    { include_blank: true },
    { class: 'chosen-select' }
    %>

    <%= f.label :encore_song_id, "Encore", class: "prediction-form"%>
    <%= f.select :encore_song_id,
    @song_list.map { |s| [s.song_name, s.id] },
    { include_blank: true },
    { class: 'chosen-select' }
    %>

    <%= f.label :random_pick_song_id, "Random Pick", class: "prediction-form"%>
    <%= f.select :random_pick_song_id,
    @song_list.map { |s| [s.song_name, s.id] },
    { include_blank: true },
    { class: 'chosen-select' }
    %>

    <%= f.hidden_field :concert_id, value: @concert.id%>

    <%= f.submit "Submit Predictions", class: "button radius enter" %>

    <% end %>

  </div>

</div>
